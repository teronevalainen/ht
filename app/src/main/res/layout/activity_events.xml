<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventActivity">


    <Button
        android:id="@+id/edelete"
        android:layout_width="167dp"
        android:layout_height="53dp"
        android:onClick="deleteEvent"
        android:text="Poista tapahtuma"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/listViewEvent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emodify"
        app:layout_constraintVertical_bias="0.066" />

    <Button
        android:id="@+id/eadd"
        android:layout_width="167dp"
        android:layout_height="53dp"
        android:onClick="addNewEvent"
        android:text="Lis채채 uusi tapahtuma"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/listViewEvent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/estart"
        app:layout_constraintVertical_bias="0.022" />

    <ListView
        android:id="@+id/listViewEvent"
        android:layout_width="224dp"
        android:layout_height="373dp"
        android:choiceMode="multipleChoice"
        android:listSelector="#666666"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.084" />

    <Button
        android:id="@+id/estart"
        android:layout_width="167dp"
        android:layout_height="53dp"
        android:onClick="startEvent"
        android:text="K채ynnist채 tapahtuma "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/listViewEvent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034" />

    <Button
        android:id="@+id/emodify"
        android:layout_width="167dp"
        android:layout_height="53dp"
        android:layout_marginBottom="124dp"
        android:onClick="EventViewLauncher"
        android:text="Muokkaa tapahtumaa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/listViewEvent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eadd"
        app:layout_constraintVertical_bias="0.055" />

    <Button
        android:id="@+id/eback"
        android:layout_width="167dp"
        android:layout_height="53dp"
        android:onClick="backtoMain"
        android:text="Takaisin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/listViewEvent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edelete"
        app:layout_constraintVertical_bias="0.066" />


</androidx.constraintlayout.widget.ConstraintLayout>